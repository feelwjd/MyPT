<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/start1"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textColor="#FFFFFF"
        android:text="여기가 첫번째 화면"
        android:textSize="49dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetLeft="55dp"
            android:layout_marginBottom="40dp"
            android:text="사진비교" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetLeft="120dp"
            android:text="루틴 설정" />


    </LinearLayout>
    <ScrollView

        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/chest" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/back" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/leg" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/biceps" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/triceps" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/shoulder" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:drawableBottom="@drawable/physical" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>