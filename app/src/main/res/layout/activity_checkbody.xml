<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222121"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainbtn1"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#050F4E"
            android:fontFamily="@font/hsfont"
            android:text="당신의 달라진 몸 확인해보세요!"
            android:textSize="23dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/mainbtn2"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#FA014059"
            android:fontFamily="@font/hsfont"
            android:text="나만의 루틴을   만들어볼까요?"
            android:textSize="23dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/mainbtn3"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#B10076"
        android:fontFamily="@font/hsfont"
        android:text="AI가 추천하는 당신의 루틴 !"
        android:textSize="23dp" />

    <Button
        android:id="@+id/mainbtn4"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#730024"
        android:fontFamily="@font/hsfont"
        android:text="커뮤니티 사이트로 이동 !"
        android:textSize="23dp" />


    </LinearLayout>
